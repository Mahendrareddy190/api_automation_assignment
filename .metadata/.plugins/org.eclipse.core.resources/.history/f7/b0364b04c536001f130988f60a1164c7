package ApiAutomation;

import static io.restassured.RestAssured.*;
import static io.restassured.matcher.RestAssuredMatchers.*;
import static org.hamcrest.Matchers.*;

import java.util.HashMap;

import org.testng.annotations.Test;

import io.restassured.module.jsv.JsonSchemaValidator.*;


public class automation {
	
	
	@Test
	void Create_POST() {
		HashMap<String, String> data = new HashMap<String, String>();
		data.put("city", "lagos");
		given().contentType("application/json").body(data)
		.when().post("https://countriesnow.space/api/v0.1/countries/population/cities").then().statusCode(301).body("city",equalTo("Lagos")).body("country",equalTo("Nigeria")).log();
	}
	
	@Test
	void Create_GET() {
		given()
		.when().get("https://samples.openweathermap.org/data/2.5/weather?q=London,uk&appid=439d4b804bc8187953eb36d2a8c26a02")
		.then().statusCode(200).body("base",equalTo("stations")).body("name",equalTo("London")).log().all();		
	}
}
